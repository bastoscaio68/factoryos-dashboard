{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/projetos",
      "dest": "/api/projetos.js"
    },
    {
      "src": "/arquivos",
      "dest": "/api/arquivos.js"
    },
    {
      "src": "/api/download",
      "dest": "/api/download.js"
    }
  ],
  "rewrites": [
    {
      "source": "/:file*.html",
      "destination": "/:file*.html"
    }
  ]
}
